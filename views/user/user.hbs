<div>
  <h2>User</h2>

  {{#with user}}
  <h1 class="username">{{this.username}}</h1>
  <h4>Gender: {{this.gender}}</h4>
  <h4>Age: {{this.age}}</h4>
 
  <a class="btn btn-primary" href="/user/user_profile/{{this._id}}">Edit profile</a>
  <br></br>
  <a class="btn btn-primary" href="/user/plan/{{this._id}}">Prepare plan</a>
</div>
 {{/with}}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <p class=" carousel-text text-center">Your favorite recipes</p>
  <div class="carousel-inner">
    {{#each user.recipes}}
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{this.image}}" alt="First slide">
    </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!--{{bmr this.weight this.height this.age this.gender}}-->


<br></br>
<a class="btn btn-primary" href="/search">choose recipes</a>
<br></br>
<a class="btn btn-primary" href="/auth/logout">Log out</a>
</div>