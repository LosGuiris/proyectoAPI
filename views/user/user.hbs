<div class="container cont-user">

  {{#with user}}
  <h1 class="username">{{this.username}}</h1>

  <div class="d-flex container-fluid">
    <div class="d-flex-col col-3">
      <p>
        <strong>Gender:</strong> {{this.gender}}</p>
      <p>
        <strong>Age: </strong> {{this.age}}</p>
      <p>
        <strong>Diet: </strong> {{this.diet}}</p>
    </div>

    <div class="row">
      <a class="btn btn-primary col-4 m-2" href="/user/user_profile/{{this._id}}">Edit profile</a>
      <a class="btn btn-primary col-4 m-2" href="/user/plan/{{this._id}}">Prepare plan</a>
      <a class="btn btn-primary col-4 m-2" href="/search">choose recipes</a>
      <a class="btn btn-primary col-4 m-2" href="/auth/logout">Log out</a>
      {{/with}}

    </div>
  </div>

  <div id="foodCarousel" class="carousel slide" data-ride="carousel">
    <p class=" carousel-text text-center">Your favorite recipes</p>
    <div class="carousel-inner">
      {{#each user.recipes}} {{#if @first}}
      <div class="carousel-item active">
        {{else}}
        <div class="carousel-item">
          {{/if}}
          <img class="d-block w-100" src="{{this.image}}" alt="First slide">
          <div class="carousel-caption d-none d-md-block">
            <h2>{{this.label}}</h2>
          </div>
        </div>
        {{/each}}
      </div>
      <a class="carousel-control-prev" href="#foodCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#foodCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
